<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>JAVAandDB</display-name>
  <welcome-file-list>
    <welcome-file>Index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Search</servlet-name>
    <servlet-class>servlet.BookSearchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Search</servlet-name>
    <url-pattern>/Search</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Delete</servlet-name>
    <servlet-class>servlet.BookDeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Delete</servlet-name>
    <url-pattern>/Delete</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Insert</servlet-name>
    <servlet-class>servlet.BookInsertServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Insert</servlet-name>
    <url-pattern>/Insert</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>FindByID</servlet-name>
    <servlet-class>servlet.BookFindByID</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FindByID</servlet-name>
    <url-pattern>/FindByID</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateMPassword</servlet-name>
    <servlet-class>servlet.UpdateMPassword</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateMPassword</servlet-name>
    <url-pattern>/UpdatePassword</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateBook</servlet-name>
    <servlet-class>servlet.BookUpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateBook</servlet-name>
    <url-pattern>/UpdateBook</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LendBook</servlet-name>
    <servlet-class>servlet.LendBookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LendBook</servlet-name>
    <url-pattern>/LendBook</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ReturnBook</servlet-name>
    <servlet-class>servlet.ReturnBookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReturnBook</servlet-name>
    <url-pattern>/ReturnBook</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>Code</filter-name>
    <filter-class>filter.CodeFilter</filter-class>
  </filter>  
  <filter-mapping>
  <filter-name>Code</filter-name>
  <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>DownloadTable</servlet-name>
    <servlet-class>servlet.DownloadTableServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DownloadTable</servlet-name>
    <url-pattern>/DownloadTable</url-pattern>
  </servlet-mapping>
</web-app>